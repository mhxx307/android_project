<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="20sp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="Chế độ người vs máy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20sp"
        android:text="Máy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img4"
            android:src="@drawable/matlunglabai"
            android:layout_width="80dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/img5"
            android:src="@drawable/matlunglabai"
            android:layout_width="80dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/img6"
            android:src="@drawable/matlunglabai"
            android:layout_width="80dp"
            android:layout_height="150dp"/>

    </LinearLayout>

    <TextView
        android:textColor="#F44336"
        android:textSize="30sp"
        android:gravity="center"
        android:text="vs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="20sp"
        android:text="Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/matlunglabai"
            android:layout_width="80dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/matlunglabai"
            android:layout_width="80dp"
            android:layout_height="150dp"/>

        <ImageView
            android:id="@+id/img3"
            android:src="@drawable/matlunglabai"
            android:layout_width="80dp"
            android:layout_height="150dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtKetQuaMay"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRutNgauNhien"
            android:layout_marginRight="10dp"
            android:text="Rút ngẫu nhiên"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnChoiLai"
            android:text="Chơi lại"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:text="SCORE:"
           android:textSize="20sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <TextView
           android:id="@+id/txtScore"
           android:layout_marginLeft="10dp"
           android:text="0"
           android:textSize="20sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>


</LinearLayout>
