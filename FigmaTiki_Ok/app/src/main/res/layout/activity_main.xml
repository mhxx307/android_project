<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#86DFD3D3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:text="Mã giảm giá đã lưu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
<!--        book img & text-->

        <LinearLayout
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Nguyên hàm tích phân và ứng dụng"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="Cung cấp bởi Tiki Trading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textColor="#EE0D0D"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:text="141.800 đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="@string/your_string_here"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_marginRight="5dp"
                    android:background="#fff"
                    android:src="@drawable/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="1"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:background="#fff"
                    android:src="@drawable/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:textColor="#134FEC"
                    android:textStyle="bold"
                    android:text="Mua sau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:textColor="#134FEC"
                android:textStyle="bold"
                android:gravity="bottom"
                android:text="Xem tại đây"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
<!--        text-->

    </LinearLayout>
<!-- item 1   -->

    <LinearLayout
        android:padding="10dp"
        android:weightSum="10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:paddingLeft="10dp"
            android:text="Mã giảm giá"
            android:drawableLeft="@drawable/yellowblock"
            android:background="@drawable/btngiamgia"
            android:layout_weight="6"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="áp dụng"
            android:textColor="#fff"
            android:background="#0A5EB7"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<!-- item 2: 2 button   -->

    <LinearLayout
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Bạn có phiếu quà tặng Tiki/Got it/Urbox?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#134FEC"
            android:text="Nhập tại đây?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<!--    item 3: phiếu quà tặng-->

    <LinearLayout
        android:padding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Tạm tính"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="right"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#EE0D0D"
            android:text="141.000 đ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<!--    item 4: giá tiền-->

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Thành tiền"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="right"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#EE0D0D"
                    android:text="141.000 đ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:textColor="#fff"
                android:layout_marginTop="15dp"
                android:background="@drawable/btndathang"
                android:textSize="20sp"
                android:text="TIẾN HÀNH ĐẶT HÀNG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>